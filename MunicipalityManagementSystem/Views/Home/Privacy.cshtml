@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>
    
    <div class="card mt-4">
        <div class="card-body">
            <h5 class="card-title">Municipality Management System Privacy Policy</h5>
            <p class="card-text">
                This system is designed to manage municipality services and citizen information. 
                All data collected is used strictly for municipal administration purposes and 
                is protected in accordance with local data protection laws.
            </p>
            <p>
                For more information about how we handle your data, please contact the 
                municipal data protection officer.
            </p>
        </div>
    </div>
</div>